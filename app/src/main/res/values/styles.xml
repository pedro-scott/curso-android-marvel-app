<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MarvelTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/badabb</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MarvelTextView.Title">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:maxLines">@integer/textViewOneLine</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MarvelTextView.Title.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MarvelTextView.Subtitle">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="MarvelTextView.Error">
        <item name="android:textSize">@dimen/textXLarge</item>
    </style>

    <style name="MarvelVeilRecycler">
        <item name="veilFrame_veiled">false</item>
        <item name="veilFrame_shimmerEnable">true</item>
        <item name="veilFrame_baseColor">@color/medium_grey</item>
        <item name="veilFrame_baseAlpha">1.0</item>
        <item name="veilFrame_highlightColor">@color/medium_grey</item>
        <item name="veilFrame_highlightAlpha">0.5</item>
        <item name="veilFrame_radius">@dimen/defaultRadius</item>
    </style>
</resources>